<?xml version="1.0" encoding="utf-8"?>
<com.leagueofshadows.enc.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    app:dragFromEdge="left"
    android:id="@+id/container"
    android:layout_marginTop="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageButton
                android:id="@+id/reply_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="#000000"
                app:srcCompat="@drawable/baseline_reply_24" />

            <ImageButton
                android:id="@+id/copy_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:rotation="90"
                android:tint="#000000"
                app:srcCompat="@drawable/baseline_filter_none_24" />

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="#000000"
                app:srcCompat="@drawable/ic_info_outline" />

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#E10000"
                app:srcCompat="@android:drawable/ic_menu_delete" />

        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/mainBackground">

        <ImageView
            android:id="@+id/triangle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:rotation="270"
            android:src="@drawable/ic_right_angled_triangle"
            android:tint="#212e36" />

        <LinearLayout
            android:id="@+id/incoming_layout_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/to_msg_background"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/reply_receive_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/reply_receive_background"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="TextView"
                    android:textColor="#000833"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reply_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="180dp"
                    android:text="Test view here"
                    android:textColor="#A3A3A3" />
            </LinearLayout>

            <TextView
                android:id="@+id/message"
                style="@style/chat_text_message_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:paddingStart="6dp"
                android:text="Test"
                android:textColor="#CCFFFFFF" />

            <TextView
                android:id="@+id/time"
                style="@style/chat_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:paddingEnd="5dp"
                android:text="11:15 PM" />

        </LinearLayout>


    </RelativeLayout>

</com.leagueofshadows.enc.SwipeRevealLayout>